<!doctype html>
<html lang="en">
  <head>
    <%- include('../partials/head', { title: 'Sites' }) %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container py-4">
      <h1 class="h3 mb-3">Sites</h1>
      <p class="text-muted mb-4">View and manage all RV park sites. Click edit to update site details.</p>
      <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
          <thead class="table-light">
            <tr>
              <th>Site Number</th>
              <th>Type</th>
              <th>Max Length (ft)</th>
              <th>Description</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (!sites || sites.length === 0) { %>
              <tr>
                <td colspan="6" class="text-center text-muted py-4">No sites found.</td>
              </tr>
            <% } else { %>
              <% sites.forEach(site => { %>
                <tr>
                  <td><%= site.number %></td>
                  <td><%= site.type %></td>
                  <td><%= site.lengthFt %></td>
                  <td><%= site.description %></td>
                  <td>
                    <span class="badge <%= site.active ? 'bg-success' : 'bg-secondary' %>"><%= site.active ? 'Active' : 'Archived' %></span>
                  </td>
                  <td>
                    <a href="/admin/sites/edit/<%= site.id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>
