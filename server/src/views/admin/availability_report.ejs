<%-- Availability Report --%>
<!doctype html>
<html lang="en">
  <head>
    <%- include('../partials/head', { title: 'Availability Report' }) %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container py-4">
      <h1 class="h3 mb-3">Availability Report</h1>
      <p class="text-muted mb-4">Sites available for walk-in guests after hours (weekend: <%= weekend.saturday %> - <%= weekend.sunday %>).</p>
      <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
          <thead class="table-light">
            <tr>
              <th>Site Number</th>
              <th>Type</th>
              <th>Max Length</th>
            </tr>
          </thead>
          <tbody>
            <% if (!sites || sites.length === 0) { %>
              <tr>
                <td colspan="3" class="text-center text-muted py-4">No available sites for walk-ins.</td>
              </tr>
            <% } else { %>
              <% sites.forEach(site => { %>
                <tr>
                  <td><%= site.number %></td>
                  <td><%= site.type %></td>
                  <td><%= site.maxLength || '-' %></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>
