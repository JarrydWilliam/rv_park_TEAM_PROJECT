<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <title>Reservation Cancelled · RV Park</title>
  </head>
  <body>
    <%- include('partials/nav') %>

    <header class="page-hero">
      <div class="container">
        <h1 class="display-6 fw-semibold mb-1">Reservation Cancelled</h1>
        <p class="text-muted mb-0">
          Confirmation code: <strong><%= r.confirmationCode %></strong>
        </p>
      </div>
    </header>

    <main class="container py-4">
      <section class="card card-elevated">
        <div class="card-body">
          <h2 class="h5 mb-3">Cancellation details</h2>

          <dl class="row mb-0">
            <dt class="col-sm-3">Guest</dt>
            <dd class="col-sm-9"><%= r.guestName %> &lt;<%= r.guestEmail %>&gt;</dd>

            <dt class="col-sm-3">Site</dt>
            <dd class="col-sm-9">
              <% if (r.site) { %>
                #<%= r.site.number %> · <%= r.site.type %> · max <%= r.site.lengthFt %> ft
              <% } else { %>
                Site ID <%= r.siteId %>
              <% } %>
            </dd>

            <dt class="col-sm-3">Original nightly rate</dt>
            <dd class="col-sm-9">$<%= Number(r.nightlyRate || 0).toFixed(2) %></dd>

            <dt class="col-sm-3">Cancellation fee</dt>
            <dd class="col-sm-9">
              $<%= Number(fee || 0).toFixed(2) %>
              <% if (fee === oneNight) { %>
                (one night)
              <% } else if (fee === 10) { %>
                (flat fee)
              <% } %>
            </dd>
          </dl>
        </div>
      </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
