<!-- Run before CSS to avoid flash of wrong theme -->
<script>
(() => {
  const stored = localStorage.getItem('theme');
  const systemDark = matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  const theme = stored || systemDark;
  document.documentElement.setAttribute('data-bs-theme', theme);
})();
</script>

