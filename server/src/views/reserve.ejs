<% if (typeof guest === 'undefined') { guest = null; } %>
<% if (typeof site === 'undefined') { site = null; } %>
<% if (typeof query === 'undefined') { query = {}; } %>
<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>

    <%- include('partials/nav') %>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger mt-3 mb-0" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i><%= error %>
      </div>
    <% } %>

    <header class="page-hero">
      <div class="container">
        <h1 class="display-6 fw-semibold mb-1">Complete Your Reservation</h1>
        <p class="text-muted mb-0">
          <% if (site) { %>
            Site <strong>#<%= site.number %></strong> · <%= site.type %> · <%= site.lengthFt %> ft
          <% } else { %>
            Site information unavailable
          <% } %>
        </p>
      </div>
    </header>

    <main class="container py-4">
      <section class="card card-elevated">
        <div class="card-body">
          <div class="mb-4">
            <h2 class="h5">Stay details</h2>
            <dl class="row mb-0">
              <dt class="col-sm-3">Check-in</dt>
              <dd class="col-sm-9"><%= query.check_in %></dd>

              <dt class="col-sm-3">Check-out</dt>
              <dd class="col-sm-9"><%= query.check_out %></dd>

              <dt class="col-sm-3">Rig length</dt>
              <dd class="col-sm-9"><%= query.rig_length %> ft</dd>

              <dt class="col-sm-3">Site type</dt>
              <dd class="col-sm-9"><%= query.type || (site ? site.type : '') %></dd>
            </dl>
          </div>

          <hr>

          <form method="post" action="/reservations/reserve" class="row g-3">
            <!-- Hidden fields to carry search context -->
            <input type="hidden" name="siteId" value="<%= site ? site.id : '' %>">
            <input type="hidden" name="checkIn" value="<%= query.check_in %>">
            <input type="hidden" name="checkOut" value="<%= query.check_out %>">
            <input type="hidden" name="rigLengthFt" value="<%= query.rig_length %>">

            <div class="col-12 d-flex justify-content-end gap-2">
              <a href="/search?check_in=<%= query.check_in %>&check_out=<%= query.check_out %>&rig_length=<%= query.rig_length %>&type=<%= query.type || '' %>"
                 class="btn btn-outline-secondary">
                Back to search
              </a>
              <button type="submit" class="btn btn-primary">
                Continue to Payment
              </button>
            </div>
          </form>
        </div>
      </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
